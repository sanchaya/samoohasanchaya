<%- model_class = KannadaBook -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped" id="kannada-book">
  <thead>
    <tr>
      <th>Sl.no</th>
      <th><%= t(:name) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:publisher) %></th>
      <th><%= model_class.human_attribute_name(:library) %></th>
      <th> Rights </th>
      <th><%= model_class.human_attribute_name(:barcode) %></th>
      <th> Archive </th>
      <th>Reviewed?</th>
    </tr>
  </thead>
  <tbody>
    <% @kannada_books.each do |kannada_book| %>
    <tr>
      <td><%= link_to kannada_book.id, kannada_book %></td>
      <td><%= best_in_place kannada_book, :name %></td>
      <td><%= best_in_place kannada_book, :author %></td>
      <td><%= best_in_place kannada_book, :publisher %></td>
      <td><%= kannada_book.library %></td>
      <td><%= kannada_book.rights %></td>
      <td><%= kannada_book.barcode %></td>
      <td><%= link_to kannada_book.archive_url, class: 'archive-url', target: '_blank'  do %> <%= image_tag('internet-archive-logo.png') %> <% end %></td>
      <td><%= best_in_place kannada_book, :reviewed, as: :checkbox, collection: {false: "No", true: "Yes"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
